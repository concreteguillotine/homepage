<div class="comment">
    <div class="author">
        <%= time_ago_in_words(comment.created_at) %> ago 
        &mdash; <%= simple_format(comment.name) %>
    </div>
    <div class="text">
        <%= simple_format(comment.text) %>
    </div>

    <% admins_only do %>

    <ul class="actions">
    <li><%= button_to "Delete Comment", admin_comment_path(comment),
                method: :delete,
                data: { confirm: "Delete comment?" },
                class: "delete" %></li>
    </ul>
    
    <% end %>
</div>